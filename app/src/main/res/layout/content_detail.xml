<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.e_medapp.adminPatientDetailsActivity"
        tools:showIn="@layout/activity_admin_patient_details"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etAdminPatientEmail"
            android:layout_below="@+id/etAdminPatientName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView6" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etAdminPatientName"
            android:layout_below="@+id/etAdminPatientID"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etAdminPatientType"
            android:layout_below="@+id/etAdminPatientPhone"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView6" />

        <TextView
            android:text="ID        :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/etAdminPatientName"
            android:layout_toStartOf="@+id/etAdminPatientID"
            android:layout_toLeftOf="@+id/etAdminPatientID" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etAdminPatientID"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3" />

        <TextView
            android:text="Name :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="18sp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/etAdminPatientEmail"
            android:layout_toLeftOf="@+id/etAdminPatientEmail"
            android:layout_toStartOf="@+id/etAdminPatientEmail" />

        <TextView
            android:text="Email  :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="18sp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/etAdminPatientPhone"
            android:layout_toStartOf="@+id/etAdminPatientEmail"
            android:layout_toLeftOf="@+id/etAdminPatientEmail" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etAdminPatientPhone"
            android:layout_below="@+id/etAdminPatientEmail"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toEndOf="@+id/textView6" />

        <TextView
            android:text="Phone :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="18sp"
            android:layout_below="@+id/etAdminPatientEmail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/etAdminPatientType" />

        <TextView
            android:text="Type   :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etAdminPatientPhone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView7"
            android:layout_alignBottom="@+id/etAdminPatientType"
            android:layout_toLeftOf="@+id/etAdminPatientType"
            android:layout_toStartOf="@+id/etAdminPatientType"
            android:textSize="18sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etAdminPatientDate"
            android:layout_below="@+id/etAdminPatientType"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView9" />

        <TextView
            android:text="Appointment Date :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="18sp"
            android:layout_below="@+id/etAdminPatientType"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/etAdminPatientDate"
            android:layout_toLeftOf="@+id/btnUpdate"
            android:layout_toStartOf="@+id/btnUpdate" />

        <TextView
            android:text="Appointment Time :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView11"
            android:layout_alignBottom="@+id/etAdminPatientTime"
            android:layout_toLeftOf="@+id/etAdminPatientDate"
            android:layout_toStartOf="@+id/etAdminPatientDate"
            android:textSize="18sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etAdminPatientDoctor"
            android:layout_below="@+id/textView11"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView13"
            android:layout_toLeftOf="@+id/etAdminPatientDoctor"
            android:layout_toStartOf="@+id/etAdminPatientDoctor"
            android:layout_below="@+id/textView11"
            android:text="Appointment Doctor :"
            android:textSize="18sp"
            android:layout_alignBottom="@+id/etAdminPatientDoctor" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etAdminPatientTime"
            android:layout_below="@+id/etAdminPatientDate"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Send Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSendMsg"
            android:layout_marginTop="66dp"
            android:layout_below="@+id/etAdminPatientDoctor"
            android:layout_toRightOf="@+id/btnUpdate"
            android:layout_toEndOf="@+id/btnUpdate"
            android:layout_marginLeft="54dp"
            android:layout_marginStart="54dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:id="@+id/btnUpdate"
            android:layout_alignBaseline="@+id/btnSendMsg"
            android:layout_alignBottom="@+id/btnSendMsg"
            android:layout_toLeftOf="@+id/etAdminPatientDoctor"
            android:layout_toStartOf="@+id/etAdminPatientDoctor" />
    </RelativeLayout>
</ScrollView>