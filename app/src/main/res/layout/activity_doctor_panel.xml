<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_doctor_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.e_medapp.doctorPanel">

    <TextView
        android:text="@string/my_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:id="@+id/tvDoctorMyDetails"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDoctorMyAppointment"
        android:layout_alignRight="@+id/tvDoctorMyDetails"
        android:layout_alignEnd="@+id/tvDoctorMyDetails"
        android:layout_marginTop="116dp"
        android:id="@+id/DoctorLogoutButton"
        android:textAllCaps="false" />

    <TextView
        android:text="@string/my_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/tvDoctorMyAppointment"
        android:textSize="18sp"
        tools:text="View Appointments "
        android:layout_below="@+id/tvDoctorMyDetails"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
